{
  "name": "optima-hr",
  "version": "1.0.0",
  "description": "Optima HR - Human Resources Management System",
  "author": "Optima HR",
  "private": true,
  "type": "module",
  "main": "electron/main.js",
  "homepage": "/",
  "dependencies": {
    "@daily-co/daily-js": "^0.87.0",
    "@emoji-mart/data": "^1.2.1",
    "@emoji-mart/react": "^1.1.1",
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.1",
    "@mui/icons-material": "^7.3.2",
    "@mui/lab": "^7.0.0-beta.17",
    "@mui/material": "^7.3.2",
    "@mui/x-date-pickers": "^8.12.0",
    "axios": "^1.12.2",
    "colorthief": "^2.4.0",
    "date-fns": "^4.1.0",
    "emoji-mart": "^5.6.0",
    "qrcode": "^1.5.4",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-player": "^3.3.3",
    "react-resizable-panels": "^3.0.6",
    "react-router-dom": "^7.9.1",
    "react-virtuoso": "^4.12.3"
  },
  "devDependencies": {
    "tailwindcss": "^3.4.17",
    "autoprefixer": "^10.4.20",
    "postcss": "^8.4.49",
    "@vitejs/plugin-react": "^4.3.4",
    "concurrently": "^8.2.2",
    "cross-env": "^10.1.0",
    "electron": "^35.7.5",
    "electron-builder": "^25.1.8",
    "electron-is-dev": "^3.0.1",
    "vite": "^6.0.7",
    "wait-on": "^8.0.1"
  },
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "start": "vite",
    "start:legacy": "react-scripts start",
    "build:legacy": "react-scripts build",
    "electron:dev": "concurrently \"cross-env BROWSER=none npm run dev\" \"wait-on http://localhost:3000 && cross-env VITE_DEV_SERVER_URL=http://localhost:3000 electron .\"",
    "electron:build": "npm run build && electron-builder",
    "electron:build-mac": "npm run build && electron-builder --mac",
    "electron:build-win": "npm run build && electron-builder --win",
    "dist": "npm run build && electron-builder --mac"
  },
  "build": {
    "appId": "com.optimahr.desktop",
    "productName": "Optima HR",
    "files": [
      "build/**/*",
      "node_modules/**/*",
      "electron/**/*",
      "public/logo3.png",
      "public/logo3.ico"
    ],
    "directories": {
      "buildResources": "public",
      "output": "release"
    },
    "mac": {
      "category": "public.app-category.business",
      "icon": "public/icon.icns",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "darkModeSupport": true,
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "public/entitlements.mac.plist",
      "entitlementsInherit": "public/entitlements.mac.plist"
    },
    "dmg": {
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ],
      "title": "Optima HR Installer",
      "window": {
        "width": 540,
        "height": 380
      }
    },
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "public/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "publish": {
      "provider": "github",
      "releaseType": "release"
    }
  }
}
