# Production Environment Configuration for OPTIMA-HR.NET
# Bu dosya production sunucusunda kullanilacak

# Database Configuration (Production PostgreSQL)
DB_HOST=your-production-db-host
DB_PORT=5432
DB_NAME=optima_hr
DB_USER=your-production-db-user
DB_PASSWORD=your-production-db-password

# Server Configuration
PORT=9000
NODE_ENV=production

# JWT Configuration (Production - Guvenli secret key kullanin!)
JWT_SECRET=your-very-long-and-secure-secret-key-for-production-change-this
JWT_EXPIRES_IN=7d

# File Upload Configuration
UPLOAD_DIR=uploads
MAX_FILE_SIZE=10485760

# CORS Configuration
CORS_ORIGIN=https://optima-hr.net,https://www.optima-hr.net

# API URL (Backend)
API_URL=https://api.optima-hr.net

# Frontend URL
FRONTEND_URL=https://optima-hr.net
